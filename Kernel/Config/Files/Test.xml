<otrs_config version="1.0" init="Framework">
    <ConfigItem Name="ProductName1" Required="1" Valid="1" ConfigLevel="200" ReadOnly="1">
        <Description Translatable="1">Defines the name of the application, shown in the web interface, tabs and title bar of the web browser.</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <String Regex="">OTRS 5</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="NotificationBodyLostPasswordToken1" Required="1" Valid="1" ReadOnly="1">
        <Description Translatable="1">Defines the body text for notification mails sent to agents, with token about new requested password (after using this link the new password will be sent).</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <TextArea>Hi &lt;OTRS_USERFIRSTNAME&gt;,

You or someone impersonating you has requested to change your OTRS
password.

If you want to do this, click on the link below. You will receive another email containing the password.

&lt;OTRS_CONFIG_HttpType&gt;://&lt;OTRS_CONFIG_FQDN&gt;/&lt;OTRS_CONFIG_ScriptAlias&gt;index.pl?Action=LostPassword;Token=&lt;OTRS_TOKEN&gt;

If you did not request a new password, please ignore this email.
            </TextArea>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="PerformanceLog1" Required="0" Valid="1" ConfigLevel="200" ReadOnly="1">
        <Description Translatable="1">Enables performance log (to log the page response time). It will affect the system performance. Frontend::Module###AdminPerformanceLog must be enabled.</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0">No</Item>
                <Item Key="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="PreferencesGroups###SpellDict1" Required="0" Valid="1" ReadOnly="1">
        <Description Translatable="1">Defines the config parameters of this item, to be shown in the preferences view. Take care to maintain the dictionaries installed in the system in the data section.</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::Preferences::Generic</Item>
                <Item Key="Column">User Profile</Item>
                <Item Key="Label" Translatable="1">Spelling Dictionary</Item>
                <Item Key="Key" Translatable="1">Default spelling dictionary</Item>
                <Item Key="Data">
                    <Hash>
                        <Item Key="english">English</Item>
                        <Item Key="deutsch">Deutsch</Item>
                    </Hash>
                </Item>
<!-- Disabled for OTRSCodePolicy, but the code still recognize it
                <Item Key="Option">
                    <Option SelectedID="0">
                        <Item Key="0">No</Item>
                        <Item Key="1">Yes</Item>
                    </Option>
                </Item>
-->
                <Item Key="Array">
                    <Array>
                        <Item>User Profile</Item>
                        <Item>Other Settings</Item>
                    </Array>
                </Item>
                <Item Key="DataSelected">english</Item>
                <Item Key="PrefKey">UserSpellDict</Item>
                <Item Key="Prio">2000</Item>
                <Item Key="Active">1</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerPreferencesView1" Required="1" Valid="1" ReadOnly="1">
        <Description Translatable="1">Sets the order of the different items in the customer preferences view.</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <Array>
                <Item>User Profile</Item>
                <Item>Other Settings</Item>
            </Array>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###Admin1" Required="0" Valid="1" ReadOnly="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <GroupRo>users</GroupRo>
                <Description>Admin-Area</Description>
                <Title></Title>
                <NavBarName>Admin</NavBarName>
                <NavBar>
                    <Group>admin</Group>
                    <GroupRo>stats</GroupRo>
                    <Type>Menu</Type>
                    <Description Translatable="1"></Description>
                    <Block>ItemArea</Block>
                    <Name Translatable="1">Admin</Name>
                    <Link>Action=Admin</Link>
                    <LinkOption></LinkOption>
                    <NavBar>Admin</NavBar>
                    <AccessKey>a</AccessKey>
                    <Prio>10000</Prio>
                </NavBar>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin1</Module>
                </NavBarModule>
                <Loader>
                    <CSS>Core.Agent.Admin.css</CSS>
                    <JavaScript>Core.Agent.Admin.SysConfig.js</JavaScript>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TimeVacationDaysOneTime1" Required="1" Valid="1" ReadOnly="1">
        <Description Translatable="1">Adds the one time vacation days. Please use single digit pattern for numbers from 1 to 9 (instead of 01 - 09).</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
        <Setting>
            <TimeVacationDaysOneTime>
                <Item Year="2004" Month="1" Day="1">test</Item>
            </TimeVacationDaysOneTime>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TimeVacationDays" Required="1" Valid="1" ReadOnly="1">
        <Description Translatable="1">Adds the permanent vacation days. Please use single digit pattern for numbers from 1 to 9 (instead of 01 - 09).</Description>
        <Group>Test</Group>
        <SubGroup>Test</SubGroup>
